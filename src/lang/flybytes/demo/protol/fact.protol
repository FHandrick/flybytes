
math = new {
  fact(n) {
    if (n <= 1) {
      return 1;
    }
    else {
      return n * this.fact(n - 1);
    }
  }
};

i = 0;
inputs = [6,7,8];

while (i < 3) {
  print i << ":fact(" << inputs[i] << ") = " << math.fact(inputs[i]);
  i = i + 1;
}

i = 0;

while (i < 3) {
  x = new inputs[i] {
    fact(math) {
      return math.fact(this);
    }
  };
   
  print x << ".fact(math) = " << x.fact(math);

  i = i + 1;
}


